@import 'fonts/*'
html
  background-color white
.App
  user-select none
  font-family 'Montserrat-Light'
  text-align center
  color #0D0D0D
  text-transform uppercase
  height 100vh
  width 100vw
  background-color white
  font-size 1.3rem
  display flex
  align-items center
  justify-content center
  letter-spacing 2px
  padding 3%
  box-sizing border-box
  &__container
    align-items: center;
    justify-content: center;
    flex-direction column
    align-items center
    background-color white
    z-index 3
    display flex
    width 100vw
    &__left
      text-align right
      height auto
      display flex
      align-items center
      justify-content center
      flex-direction column
      box-sizing border-box
      user-select none
      div
        max-width 400px
      &__name
        font-family 'Anton-Regular'
        font-size 4rem
        position relative
        margin 10px 35px -10px
        div
          text-align center
        &__up
          font-size 4rem
          letter-spacing -3px
          opacity 1
          position relative
          z-index 1
          text-align center
          opacity .9
          letter-spacing 5px
          margin-left 7px
        &__down
          transition opacity .3s linear
          font-size 8.9rem
          opacity 1
          color #45CB85
          letter-spacing -17px
          position relative
          z-index 2
          user-select none
          display: flex;
          align-items: center;
          justify-content: center;
          line-height 12rem
          width 18rem
          margin-top -2.2rem
          margin-top -46px
          span
            transition color .5s
            opacity .85
            &:first-child
              margin-left -17px
              animation pulse 5s infinite
              animation-direction: alternate;
              &:hover
                animation none
                color #57d091
            &:nth-child(2)
              animation pulse 7s infinite
              animation-direction: alternate;
              &:hover
                animation none
                color #57d091
            &:nth-child(3)
              animation pulse 8s infinite
              animation-direction: alternate;
              &:hover
                animation none
                color #57d091
            &:nth-child(4)
              animation pulse 9s infinite
              animation-direction: alternate;
              &:hover
                animation none
                color #57d091
      &__description
        line-height 40px
        text-align center
    &__down
      position absolute
      bottom 20px
      font-size 13px
      letter-spacing 0px
      left 50%
      transform translateX(-50%)
      color #516673
  .background
    position absolute
    top 0
    left 0
    height 100vh
    width 100vw
    z-index 2
    background-color white
    &__share
      position: absolute;
      left: 10px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 20px;
    &__social
      position absolute
      display flex
      left 50%
      flex-direction row
      transform translateX(-50%)
      font-size 12px
      bottom 50px
      a
        color black
        text-decoration none
        margin: 10px;
        opacity: .3
        transition opacity .2s linear
        &:hover
          color black
          opacity 1
  @media (min-width: 1300px)
    font-size 1.5rem
    &__container
      &__left
        flex-direction row
        border-bottom none
        padding-bottom 0
        height 220px
        div
          max-width none
        &__name
          margin 0 35px
          &__up
            font-size 6rem
            margin-left 0
          &__down
            font-size 12rem
            margin-top 0px

  @keyframes pulse
    for i in 6..8
      {10% * i}
        opacity (i/10)

@font-face
  font-family 'Anton-Regular'
  src local('Anton-Regular'), url(/fonts/Anton-Regular.ttf) format('truetype')
@font-face
  font-family 'Montserrat-Light'
  src local('Montserrat-Light'), url(/fonts/Montserrat-Light.ttf) format('truetype')